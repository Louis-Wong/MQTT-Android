<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nickLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:text="ID(Nickname):"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editNick"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:textSize="15dp"
        android:inputType="textPersonName"
        android:text="Client"

        android:layout_marginTop="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="150dp"/>

    <TextView
        android:id="@+id/addrLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:text="Host Address:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editAddr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:textSize="15dp"
        android:inputType="textPersonName"
        android:text="10.21.8.193"

        android:layout_marginTop="115dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="150dp"/>

    <TextView
        android:id="@+id/portLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:text="Port:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editPort"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:textSize="15dp"
        android:inputType="textPersonName"
        android:text="61613"

        android:layout_marginTop="170dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="120dp"/>

    <TextView
        android:id="@+id/subUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="20dp"
        android:text="User:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editUser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:textSize="15dp"
        android:inputType="textPersonName"

        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="120dp"/>

    <TextView
        android:id="@+id/pwLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20dp"
        android:text="Password:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:textSize="15dp"
        android:inputType="textPassword"

        android:layout_marginTop="290dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="120dp"/>

    <Button
        android:id="@+id/consetBnt"

        android:text="connect"

        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/disConBnt"

        android:text="disconnect"

        android:layout_marginLeft="200dp"
        android:layout_marginTop="400dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>